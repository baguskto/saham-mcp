# IDX MCP Server Configuration

# Server settings
IDX_MCP_SERVER_NAME="IDX MCP Server"
IDX_MCP_SERVER_VERSION="1.0.0"
IDX_MCP_DEBUG=false

# Cache settings
IDX_MCP_CACHE_TYPE=memory  # memory or redis
IDX_MCP_REDIS_URL=redis://localhost:6379/0

# Cache TTL settings (in seconds)
IDX_MCP_CACHE_TTL_MARKET_OVERVIEW=60
IDX_MCP_CACHE_TTL_STOCK_INFO=300
IDX_MCP_CACHE_TTL_HISTORICAL=86400
IDX_MCP_CACHE_TTL_SECTOR=300
IDX_MCP_CACHE_TTL_STATIC=604800

# Data source settings
IDX_MCP_YAHOO_TIMEOUT=10000
IDX_MCP_WEB_TIMEOUT=15000
IDX_MCP_MAX_RETRIES=3
IDX_MCP_RETRY_DELAY=1000

# Rate limiting
IDX_MCP_REQUESTS_PER_MINUTE=60
IDX_MCP_BURST_LIMIT=10

# Logging settings
IDX_MCP_LOG_LEVEL=info  # error, warn, info, debug
IDX_MCP_LOG_FILE=logs/idx_mcp.log

# Data file paths
IDX_MCP_STOCK_LIST_FILE=data/idx_stocks.csv
IDX_MCP_SECTOR_MAPPING_FILE=data/sector_mapping.csv